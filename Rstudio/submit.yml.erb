---
batch_connect:
  conn_params:
    - csrf_token
  template: "basic"
script:
  native:
    - "-N"
    - "<%= bc_num_slots.blank? ? 1 : bc_num_slots.to_i %>"
    - "--ntasks"
    - "<%= slurm_cores.blank? ? 1 : slurm_cores.to_i %>"
    - "--mem"
    - "<%= slurm_mem.blank? ? 1 : slurm_mem.to_i %>gb"
    - "--mail-type=begin --mail-user=<%= ENV[“USER”] %>"

